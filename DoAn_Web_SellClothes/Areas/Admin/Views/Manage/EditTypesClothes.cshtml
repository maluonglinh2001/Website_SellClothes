@model DoAn_Web_SellClothes.Models.ProductType
@{
    ViewBag.Title = "EditTypesClothes";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="my-4">Chỉnh sửa loại đồ</h1>

    <div class="card mb-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="card-body">
                <div class="table-Edit table-responsive">
                    <table class="table">
                        <tbody>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.IdProductType)
                            <tr>
                                <th>Tên loại</th>
                                <td>
                                    @Html.EditorFor(model => model.NameProductType, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NameProductType, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <th>Giới tính</th>            
                                    @if(Model.IdSex == 1)
                                    {
                                        <td>
                                            nam
                                        </td>
                                    }
                                    else
                                    {
                                        <td>Nữ</td>
                                    }
                            </tr>
                            <tr>
                                <th></th>
                                <td>
                                    <select class="form-select" aria-label="Default select example" name="sex" required>
                                        <option value="1">Nam</option>
                                        <option value="0">Nữ</option>
                                    </select>
                                    @ViewData["1"]
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <input type="submit" class="btn-fluid btn btn-outline-success" value="Xác nhận" />
        }
    </div>
    <button class="btn btn-outline-dark" onclick="history.back()">Trở về</button>
</div>
