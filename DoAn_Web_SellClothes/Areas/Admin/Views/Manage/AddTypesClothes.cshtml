@model DoAn_Web_SellClothes.Models.ProductType
@{
    ViewBag.Title = "AddTypesClothes";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="px-4">
    <h1 class="my-4">Thêm loại đồ</h1>
    <div class="card mb-4 mx-auto" style="max-width:70vh">
        <div class="card-header">
            <i class="fas fa-shirt"></i>
            Thêm loại đồ
        </div>
        @using (Html.BeginForm())
        {
            <div class="card-body">
                <div class="d-flex flex-column justify-content-around" style="min-height:10rem">
                    <div class="d-flex flex-column flex-md-row justify-content-between">
                        <label><b>Mời bạn nhập loại: </b> </label>
                        <input type="text" name="name" />
                    </div>
                    <div class="d-flex flex-column flex-md-row justify-content-between">
                        <label><b>Mời bạn chọn giới tính: </b> </label>
                        <select style="width:200px" class="form-select" aria-label="Default select example" name="sex" required>
                            <option value="1">Nam</option>
                            <option value="0">Nữ</option>
                        </select>
                    </div>
                    @ViewData["1"]
                </div>

            </div>
            <input type="submit" class="btn btn-outline-success btn-fluid" value="Thêm" />
        }
    </div>
    <a class="btn btn-outline-dark" href="@Url.Action("TypesClothes","Manage")">Trở về</a>
</div>



